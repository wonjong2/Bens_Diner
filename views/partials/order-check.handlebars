<!-- Order check column -->
<div class="col-md col-ex" id="orderCheck">
    <div class="wrapper">
        <div class="title-text">
            <div class="title login">Check Order Status</div>
        </div>
        <div class="form-container">
            <div class="form-inner">
                <form action="#" class="login">
                    <div class="field">
                        <input
                            id="order-number"
                            type="text"
                            placeholder="Order Number"
                            required
                        />
                    </div>
                    <div class="field button">
                        <div class="button-layer"></div>
                        <input
                            type="submit"
                            value="Check Status"
                            id="check-order-btn"
                        />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Order check column -->